<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/content_new_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:text="@string/source_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:id="@+id/source_at"
            android:textSize="22sp"
            android:layout_below="@+id/app_name"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

        <TextView
            android:text="@string/dev_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:id="@+id/made_by"
            android:layout_alignTop="@+id/app_name"
            android:layout_centerHorizontal="true"
            android:textSize="18sp" />

        <TextView
            android:text="@string/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/credits_view"
            android:textSize="21sp"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/source_at"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:textColor="#303F9F" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ver_text"
            android:layout_alignParentTop="true"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_name"
            android:textSize="18sp"
            android:layout_below="@+id/app_icon"
            android:layout_centerHorizontal="true" />

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/credits_view"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card3"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card4"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card5"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card6"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card7"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card8"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            card:cardPreventCornerOverlap="true"

            android:layout_marginTop="20dp"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/card10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card9"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:card_layout_resourceID="@layout/card"
            card:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_icon"
            android:textSize="96sp"
            android:textAlignment="center"
            android:textColor="#ffbb33"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/ver_text"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>
